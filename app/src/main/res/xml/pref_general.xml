    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_label"
        android:defaultValue="@string/pref_default_location_zipcode"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. @nullを設定することでOK/Cancelボタンを消している-->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="@string/pref_temperature_key"
        android:title="@string/pref_temperature_label"
        android:defaultValue="@string/pref_temperature_metric_value"
        android:entries="@array/pref_temperature_units_titles"
        android:entryValues="@array/pref_temperature_units_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
    />

</PreferenceScreen>
